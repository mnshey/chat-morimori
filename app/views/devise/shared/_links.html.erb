<%- if controller_name != 'sessions' %>
  <div class="login_signup_button"><%= link_to "ログイン", new_session_path(resource_name) %></div>
<% end -%>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <div class="login_signup_button"><%= link_to "アカウント登録", new_registration_path(resource_name) %></div>
<% end -%>
