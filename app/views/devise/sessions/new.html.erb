<div id="newaccountmain">


<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="font-title"><h1>ログイン</h1></div>

<div class="final-form">

  <div class="field">
  <label>学籍番号</label>
  <input id="area51" name="area1" />
  </div>

  <div class="field" style="display: none;">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field" style="display: none;">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "off", value: "123123123"%>
  </div>

  <div class="actions">
    <%= f.submit "ログイン" , type:"button", id:"btn_submit" %>
  </div>


<% end %>
<%= render "devise/shared/links" %>

